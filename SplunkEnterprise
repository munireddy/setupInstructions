wget https://download.splunk.com/products/splunk/releases/7.1.1/linux/splunk-7.1.1-8f0ead9ec3db-linux-2.6-amd64.deb
sudo dpkg -i splunk-7.1.1-8f0ead9ec3db-linux-2.6-amd64.deb
ls -ltr /opt/splunk/bin   # to confirm the splunk is installed properly
sudo systemctl status  splunk
sudo systemctl start spunk  # incase if it is not started autoamtically
sudo /opt/splunk/bin/splunk enable boot-start  # to start Splunk at boot time
